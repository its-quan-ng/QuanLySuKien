@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-3">
                <i class="bi bi-speedometer2 text-danger"></i> Admin Dashboard
            </h1>
            <p class="text-muted">Tổng quan hệ thống EventHub</p>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Tổng Users</h6>
                            <h3 class="mb-0 fw-bold">@ViewBag.TotalUsers</h3>
                        </div>
                        <div class="text-primary" style="font-size: 2.5rem;">
                            <i class="bi bi-people"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Tổng Sự Kiện</h6>
                            <h3 class="mb-0 fw-bold">@ViewBag.TotalEvents</h3>
                        </div>
                        <div class="text-success" style="font-size: 2.5rem;">
                            <i class="bi bi-calendar-event"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Tổng Đơn Hàng</h6>
                            <h3 class="mb-0 fw-bold">@ViewBag.TotalOrders</h3>
                        </div>
                        <div class="text-warning" style="font-size: 2.5rem;">
                            <i class="bi bi-receipt"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Doanh Thu</h6>
                            <h3 class="mb-0 fw-bold">@ViewBag.TotalRevenue.ToString("N0") đ</h3>
                        </div>
                        <div class="text-danger" style="font-size: 2.5rem;">
                            <i class="bi bi-currency-dollar"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row g-3 mb-4">
        <div class="col-12 col-xl-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0"><i class="bi bi-graph-up text-success"></i> Doanh Thu 6 Tháng Gần Đây</h5>
                </div>
                <div class="card-body">
                    <canvas id="revenueChart" height="80"></canvas>
                </div>
            </div>
        </div>
        <div class="col-12 col-xl-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0"><i class="bi bi-pie-chart text-warning"></i> Đơn Hàng Theo Trạng Thái</h5>
                </div>
                <div class="card-body">
                    <canvas id="ordersChart" height="80"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <!-- Recent Orders -->
        <div class="col-12 col-xl-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Đơn Hàng Gần Đây</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Khách Hàng</th>
                                    <th>Sự Kiện</th>
                                    <th>Loại Vé</th>
                                    <th>SL</th>
                                    <th>Tổng Tiền</th>
                                    <th>Trạng Thái</th>
                                    <th>Ngày Đặt</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in ViewBag.RecentOrders)
                                {
                                    <tr>
                                        <td><strong>#@order.Id</strong></td>
                                        <td>@order.TenKhachHang</td>
                                        <td>@order.SuKien.TenSuKien</td>
                                        <td>@order.LoaiVe.TenLoai</td>
                                        <td>@order.SoLuong</td>
                                        <td class="fw-bold">@order.TongTien.ToString("N0") đ</td>
                                        <td>
                                            @if (order.TrangThai == "ChoDuyet")
                                            {
                                                <span class="badge bg-warning">Chờ Duyệt</span>
                                            }
                                            else if (order.TrangThai == "DaXacNhan")
                                            {
                                                <span class="badge bg-success">Đã Xác Nhận</span>
                                            }
                                            else if (order.TrangThai == "DaHuy")
                                            {
                                                <span class="badge bg-danger">Đã Hủy</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@order.TrangThai</span>
                                            }
                                        </td>
                                        <td>@order.NgayDat.ToString("dd/MM/yyyy HH:mm")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer bg-white text-center">
                    <a asp-controller="DonHangs" asp-action="Index" class="btn btn-outline-primary btn-sm">
                        Xem Tất Cả <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-12 col-xl-4">
            <!-- Quick Actions -->
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0"><i class="bi bi-lightning"></i> Thao Tác Nhanh</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="Admin" asp-action="Users" class="btn btn-outline-primary">
                            <i class="bi bi-people"></i> Quản Lý Users
                        </a>
                        <a asp-area="Admin" asp-controller="SuKiens" asp-action="Index" class="btn btn-outline-success">
                            <i class="bi bi-calendar-event"></i> Quản Lý Sự Kiện
                        </a>
                        <a asp-area="Admin" asp-controller="LoaiVes" asp-action="Index" class="btn btn-outline-purple">
                            <i class="bi bi-ticket-perforated"></i> Quản Lý Loại Vé
                        </a>
                        <a asp-area="Admin" asp-controller="DonHangs" asp-action="Index" class="btn btn-outline-warning">
                            <i class="bi bi-receipt"></i> Quản Lý Đơn Hàng
                        </a>
                        <a asp-area="Admin" asp-controller="NgheSis" asp-action="Index" class="btn btn-outline-info">
                            <i class="bi bi-star"></i> Quản Lý Nghệ Sĩ
                        </a>
                        <a asp-area="Admin" asp-controller="DiaDiems" asp-action="Index" class="btn btn-outline-danger">
                            <i class="bi bi-geo-alt"></i> Quản Lý Địa Điểm
                        </a>
                    </div>
                </div>
            </div>

            <!-- Upcoming Events -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0"><i class="bi bi-calendar-check"></i> Sự Kiện Sắp Tới</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @foreach (var evt in ViewBag.UpcomingEvents)
                        {
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between align-items-start">
                                    <div>
                                        <h6 class="mb-1">@evt.TenSuKien</h6>
                                        <p class="mb-1 text-muted small">
                                            <i class="bi bi-geo-alt"></i> @evt.DiaDiem.TenDiaDiem
                                        </p>
                                        <small class="text-primary">
                                            <i class="bi bi-calendar"></i> @evt.NgayToChuc.ToString("dd/MM/yyyy")
                                            <i class="bi bi-clock ms-2"></i> @evt.GioToChuc.ToString("HH:mm")
                                        </small>
                                    </div>
                                    <span class="badge bg-success">@evt.TrangThai</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s;
    }
    .card:hover {
        transform: translateY(-2px);
    }
    .btn-outline-purple {
        color: #6f42c1;
        border-color: #6f42c1;
    }
    .btn-outline-purple:hover {
        color: #fff;
        background-color: #6f42c1;
        border-color: #6f42c1;
    }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/admin-dashboard.js"></script>
    <script>
        const revenueData = @Html.Raw(Json.Serialize(ViewBag.RevenueByMonth));
        const ordersData = @Html.Raw(Json.Serialize(ViewBag.OrdersByStatus));
        initDashboardCharts(revenueData, ordersData);
    </script>
}
