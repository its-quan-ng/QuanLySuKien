@{
    ViewData["Title"] = "Chỉnh Sửa Roles";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-3">
                <i class="bi bi-pencil-square text-warning"></i> Chỉnh Sửa Roles
            </h1>
            <p class="text-muted">Cập nhật phân quyền cho user</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        <strong>User:</strong> @ViewBag.UserEmail
                    </div>

                    <form method="post" asp-action="EditUserRoles">
                        <input type="hidden" name="userId" value="@ViewBag.UserId" />

                        <div class="mb-4">
                            <label class="form-label fw-bold">Chọn Roles</label>

                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="roles" value="User"
                                       id="roleUser" @(ViewBag.CurrentRoles.Contains("User") ? "checked" : "")>
                                <label class="form-check-label" for="roleUser">
                                    <span class="badge bg-success">User</span> - Người dùng thông thường
                                </label>
                            </div>

                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="roles" value="Admin"
                                       id="roleAdmin" @(ViewBag.CurrentRoles.Contains("Admin") ? "checked" : "")>
                                <label class="form-check-label" for="roleAdmin">
                                    <span class="badge bg-danger">Admin</span> - Quản trị viên (toàn quyền)
                                </label>
                            </div>
                        </div>

                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i>
                            <small><strong>Lưu ý:</strong> User có thể có nhiều roles cùng lúc</small>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-warning text-white">
                                <i class="bi bi-check-circle"></i> Cập Nhật
                            </button>
                            <a asp-action="Users" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
