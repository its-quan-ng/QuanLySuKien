@model List<QuanLySuKien.Models.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Quản Lý Users";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-3">
                <i class="bi bi-people text-primary"></i> Quản Lý Users
            </h1>
            <p class="text-muted">Danh sách tất cả người dùng trong hệ thống</p>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-0">Tổng số: @Model.Count users</h5>
                            <div class="mt-2">
                                <span class="badge bg-danger">Admin: @Model.Count(u => u.Roles.Contains("Admin"))</span>
                                <span class="badge bg-success ms-2">User: @Model.Count(u => u.Roles.Contains("User"))</span>
                            </div>
                        </div>
                        <a asp-action="CreateUser" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Tạo User Mới
                        </a>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Email</th>
                                    <th>Username</th>
                                    <th>Email Confirmed</th>
                                    <th>Roles</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td><small class="text-muted">@user.Id.Substring(0, 8)...</small></td>
                                        <td><i class="bi bi-envelope"></i> @user.Email</td>
                                        <td>@user.UserName</td>
                                        <td>
                                            @if (user.EmailConfirmed)
                                            {
                                                <span class="badge bg-success"><i class="bi bi-check-circle"></i> Verified</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning"><i class="bi bi-exclamation-circle"></i> Unverified</span>
                                            }
                                        </td>
                                        <td>
                                            @foreach (var role in user.Roles)
                                            {
                                                if (role == "Admin")
                                                {
                                                    <span class="badge bg-danger me-1">@role</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success me-1">@role</span>
                                                }
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a asp-action="EditUserRoles" asp-route-id="@user.Id" class="btn btn-outline-warning" title="Edit Roles">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                @if (!user.Roles.Contains("Admin"))
                                                {
                                                    <button type="button" class="btn btn-outline-danger" title="Delete"
                                                            onclick="confirmDelete('@user.Id', '@user.Email')">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay Lại Dashboard
            </a>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-exclamation-triangle text-danger"></i> Xác Nhận Xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc muốn xóa user <strong id="deleteUserEmail"></strong>?
                <br><small class="text-danger">Hành động này không thể hoàn tác!</small>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form id="deleteForm" method="post" asp-action="DeleteUser" class="d-inline">
                    <input type="hidden" name="id" id="deleteUserId" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Xóa
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDelete(userId, userEmail) {
        document.getElementById('deleteUserId').value = userId;
        document.getElementById('deleteUserEmail').textContent = userEmail;
        new bootstrap.Modal(document.getElementById('deleteModal')).show();
    }
</script>
