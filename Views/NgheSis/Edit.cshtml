@model QuanLySuKien.Models.NgheSi
@{
    ViewData["Title"] = "Chỉnh Sửa Nghệ Sĩ";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="AnhDaiDien" />

                        <div class="mb-3">
                            <label asp-for="TenNgheSi" class="form-label">Tên Nghệ Sĩ <span class="text-danger">*</span></label>
                            <input asp-for="TenNgheSi" class="form-control" />
                            <span asp-validation-for="TenNgheSi" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="TheLoai" class="form-label">Thể Loại</label>
                            <select asp-for="TheLoai" class="form-select">
                                <option value="">-- Chọn --</option>
                                <option>Pop</option>
                                <option>Rock</option>
                                <option>Ballad</option>
                                <option>EDM</option>
                                <option>Rap/Hip-Hop</option>
                                <option>Classical</option>
                                <option>Jazz</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label asp-for="TieuSu" class="form-label">Tiểu Sử</label>
                            <textarea asp-for="TieuSu" class="form-control" rows="4"></textarea>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.AnhDaiDien))
                        {
                            <div class="mb-2">
                                <img src="@Model.AnhDaiDien" class="img-thumbnail" style="max-height: 120px;" />
                            </div>
                        }
                        <div class="mb-3">
                            <label class="form-label">Thay Ảnh Đại Diện</label>
                            <input type="file" name="anhDaiDienFile" class="form-control" accept="image/*" />
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-warning text-white">
                                <i class="bi bi-check"></i> Cập Nhật
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
