@model QuanLySuKien.Models.DonHang

@{
    ViewData["Title"] = "Chi Tiết Đơn Hàng";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-receipt"></i> Chi Tiết Đơn Hàng #@Model.Id</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Khách Hàng:</dt>
                        <dd class="col-sm-8">@Model.TenKhachHang</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Số Điện Thoại:</dt>
                        <dd class="col-sm-8">@Model.SoDienThoai</dd>

                        <dt class="col-sm-4">Sự Kiện:</dt>
                        <dd class="col-sm-8">@Model.SuKien.TenSuKien</dd>

                        <dt class="col-sm-4">Loại Vé:</dt>
                        <dd class="col-sm-8">@Model.LoaiVe.TenLoai</dd>

                        <dt class="col-sm-4">Số Lượng:</dt>
                        <dd class="col-sm-8">@Model.SoLuong vé</dd>

                        <dt class="col-sm-4">Tổng Tiền:</dt>
                        <dd class="col-sm-8"><strong class="text-danger">@Model.TongTien.ToString("N0") đ</strong></dd>

                        <dt class="col-sm-4">Ngày Đặt:</dt>
                        <dd class="col-sm-8">@Model.NgayDat.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Trạng Thái:</dt>
                        <dd class="col-sm-8">
                            @switch(Model.TrangThai)
                            {
                                case "ChoDuyet":
                                    <span class="badge bg-warning">Chờ Duyệt</span>
                                    break;
                                case "DaXacNhan":
                                    <span class="badge bg-success">Đã Xác Nhận</span>
                                    break;
                                case "DaHuy":
                                    <span class="badge bg-danger">Đã Hủy</span>
                                    break;
                            }
                        </dd>
                    </dl>

                    <hr>
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning text-white">
                            <i class="bi bi-pencil"></i> Sửa
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Quay Lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
