@model IEnumerable<QuanLySuKien.Models.DonHang>

@{
    ViewData["Title"] = "Quản Lý Đơn Hàng";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0"><i class="bi bi-receipt"></i> Tất Cả Đơn Hàng (@Model.Count())</h4>
        <a asp-action="ExportExcel" class="btn btn-success">
            <i class="bi bi-file-earmark-excel"></i> Export Excel
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Mã ĐH</th>
                            <th>Khách Hàng</th>
                            <th>Email</th>
                            <th>SĐT</th>
                            <th>Sự Kiện</th>
                            <th>Loại Vé</th>
                            <th>Số Lượng</th>
                            <th>Tổng Tiền</th>
                            <th>Trạng Thái</th>
                            <th>Ngày Đặt</th>
                            <th>Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><strong>#@item.Id</strong></td>
                                <td>@item.TenKhachHang</td>
                                <td>@item.Email</td>
                                <td>@item.SoDienThoai</td>
                                <td>@item.SuKien.TenSuKien</td>
                                <td>@item.LoaiVe.TenLoai</td>
                                <td>@item.SoLuong</td>
                                <td class="fw-bold">@item.TongTien.ToString("N0") đ</td>
                                <td>
                                    @switch(item.TrangThai)
                                    {
                                        case "ChoDuyet":
                                            <span class="badge bg-warning">Chờ Duyệt</span>
                                            break;
                                        case "DaXacNhan":
                                            <span class="badge bg-success">Đã Xác Nhận</span>
                                            break;
                                        case "DaHuy":
                                            <span class="badge bg-danger">Đã Hủy</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@item.TrangThai</span>
                                            break;
                                    }
                                </td>
                                <td>@item.NgayDat.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary" title="Chi tiết">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning" title="Sửa">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-danger" onclick="confirmDelete(@item.Id, '@item.TenKhachHang')" title="Xóa">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-exclamation-triangle text-danger"></i> Xác Nhận Xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc muốn xóa đơn hàng của <strong id="deleteOrderCustomer"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form id="deleteForm" method="post" asp-action="Delete" class="d-inline">
                    <input type="hidden" name="id" id="deleteOrderId" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Xóa
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDelete(orderId, customerName) {
        document.getElementById('deleteOrderId').value = orderId;
        document.getElementById('deleteOrderCustomer').textContent = customerName;
        new bootstrap.Modal(document.getElementById('deleteModal')).show();
    }
</script>
