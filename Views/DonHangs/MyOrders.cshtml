@model IEnumerable<QuanLySuKien.Models.DonHang>

@{
    ViewData["Title"] = "Vé Của Tôi";
}

<div class="my-orders-page">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="my-orders-header text-center mb-4">
                    <i class="bi bi-ticket-perforated-fill header-icon text-primary" style="font-size: 3rem;"></i>
                    <h1 class="mt-3">Vé Của Tôi</h1>
                    <p class="text-muted">Quản lý tất cả các đơn hàng và vé sự kiện của bạn</p>
                </div>

                <!-- Orders Summary -->
                @if (Model != null && Model.Any())
                {
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <div class="card border-0 shadow-sm text-center">
                                <div class="card-body">
                                    <h3 class="text-primary">@Model.Count()</h3>
                                    <p class="mb-0 text-muted">Tổng Đơn Hàng</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card border-0 shadow-sm text-center">
                                <div class="card-body">
                                    <h3 class="text-success">@Model.Count(o => o.TrangThai == "DaXacNhan")</h3>
                                    <p class="mb-0 text-muted">Đã Xác Nhận</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card border-0 shadow-sm text-center">
                                <div class="card-body">
                                    <h3 class="text-warning">@Model.Count(o => o.TrangThai == "ChoDuyet")</h3>
                                    <p class="mb-0 text-muted">Chờ Duyệt</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Orders List -->
                    <div class="orders-list">
                        @foreach (var order in Model)
                        {
                            <div class="card border-0 shadow-sm mb-3">
                                <div class="card-header bg-white">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong class="text-primary">#@order.Id</strong>
                                            <small class="text-muted ms-2">@order.NgayDat.ToString("dd/MM/yyyy HH:mm")</small>
                                        </div>
                                        <div>
                                            @switch(order.TrangThai)
                                            {
                                                case "ChoDuyet":
                                                    <span class="badge bg-warning"><i class="bi bi-clock"></i> Chờ Duyệt</span>
                                                    break;
                                                case "DaXacNhan":
                                                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Đã Xác Nhận</span>
                                                    break;
                                                case "DaHuy":
                                                    <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Đã Hủy</span>
                                                    break;
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <h5 class="mb-2">@order.SuKien.TenSuKien</h5>
                                            <p class="text-muted mb-1">
                                                <i class="bi bi-geo-alt"></i> @order.SuKien.DiaDiem.TenDiaDiem
                                            </p>
                                            <p class="text-muted mb-1">
                                                <i class="bi bi-calendar3"></i> @order.SuKien.NgayToChuc.ToString("dd/MM/yyyy")
                                                <i class="bi bi-clock ms-2"></i> @order.SuKien.GioToChuc.ToString("HH:mm")
                                            </p>
                                            <p class="mb-0">
                                                <span class="badge bg-info">@order.LoaiVe.TenLoai</span>
                                                <span class="text-muted ms-2">x @order.SoLuong vé</span>
                                            </p>
                                        </div>
                                        <div class="col-md-4 text-md-end">
                                            <p class="mb-2">
                                                <small class="text-muted">Tổng tiền:</small><br>
                                                <strong class="h4 text-danger">@order.TongTien.ToString("N0") đ</strong>
                                            </p>
                                            <hr>
                                            <p class="mb-0 small">
                                                <i class="bi bi-person"></i> @order.TenKhachHang<br>
                                                <i class="bi bi-envelope"></i> @order.Email<br>
                                                <i class="bi bi-telephone"></i> @order.SoDienThoai
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-orders text-center py-5">
                        <i class="bi bi-inbox" style="font-size: 5rem; color: #ccc;"></i>
                        <h3 class="mt-3">Chưa Có Đơn Hàng</h3>
                        <p class="text-muted">Bạn chưa đặt vé cho sự kiện nào</p>
                        <a asp-controller="SuKiens" asp-action="Index" class="btn btn-primary mt-3">
                            <i class="bi bi-search"></i> Khám Phá Sự Kiện
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .my-orders-page {
        padding: 40px 0;
        background: #f8f9fa;
        min-height: calc(100vh - 200px);
    }
    .my-orders-header {
        margin-bottom: 30px;
    }
    .card {
        transition: transform 0.2s;
    }
    .card:hover {
        transform: translateY(-2px);
    }
</style>
