@model IEnumerable<QuanLySuKien.Models.DiaDiem>

@{
    ViewData["Title"] = "Địa Điểm";
    var gradients = new[] {
        "linear-gradient(135deg, #8B1538 0%, #A8244E 100%)",
        "linear-gradient(135deg, #1B3A5F 0%, #2C5282 100%)",
        "linear-gradient(135deg, #8B1538 0%, #1B3A5F 100%)",
        "linear-gradient(135deg, #2C5282 0%, #8B1538 100%)"
    };
    var icons = new[] { "bi-building", "bi-geo-alt-fill", "bi-pin-map-fill", "bi-buildings" };
}

<!-- Hero Section -->
<div class="hero-search-section">
    <div class="container">
        <h1 class="hero-title">Khám Phá Địa Điểm Sự Kiện</h1>
        <p class="hero-subtitle">Tìm hiểu các venue tổ chức sự kiện hàng đầu</p>
    </div>
</div>

<!-- Venues Grid -->
<div class="container venues-container">
    @if (User.IsInRole("Admin"))
    {
        <div class="alert alert-info d-flex justify-content-between align-items-center mb-3">
            <div><i class="bi bi-shield-check"></i> <strong>Admin Mode</strong></div>
            <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Tạo Địa Điểm Mới</a>
        </div>
    }

    <div class="venues-grid">
        @if (Model != null && Model.Any())
        {
            int index = 0;
            @foreach (var venue in Model)
            {
                var gradient = gradients[index % gradients.Length];
                var icon = icons[index % icons.Length];
                index++;

                <div class="venue-card" style="position: relative;">
                    <a asp-controller="DiaDiems" asp-action="Details" asp-route-id="@venue.Id" class="venue-card-overlay"></a>

                    @if (User.IsInRole("Admin"))
                    {
                        <div style="position: absolute; top: 10px; right: 10px; z-index: 10; display: flex; gap: 5px;">
                            <a asp-action="Edit" asp-route-id="@venue.Id" class="btn btn-sm btn-warning" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@venue.Id" class="btn btn-sm btn-danger" title="Delete">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    }

                    <div class="venue-card-image" style="background: @gradient;">
                        <div class="venue-icon-wrapper">
                            <i class="@icon venue-icon"></i>
                        </div>
                        <div class="venue-card-overlay-text">@venue.TenDiaDiem</div>
                    </div>

                    <div class="venue-card-content">
                        <h3 class="venue-card-name">@venue.TenDiaDiem</h3>
                        <p class="venue-card-address">
                            <i class="bi bi-geo-alt"></i>
                            @venue.DiaChi
                        </p>
                        <div class="venue-card-info">
                            <div class="info-badge">
                                <i class="bi bi-people"></i>
                                <span>@venue.SucChua.ToString("N0")</span>
                            </div>
                            @{
                                var eventCount = venue.SuKiens?.Count(s => s.TrangThai == "SapDienRa") ?? 0;
                            }
                            <div class="info-badge">
                                <i class="bi bi-calendar-event"></i>
                                <span>@eventCount sự kiện</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle me-2"></i>
                    Chưa có địa điểm nào trong hệ thống.
                </div>
            </div>
        }
    </div>
</div>
