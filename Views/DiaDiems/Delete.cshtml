@model QuanLySuKien.Models.DiaDiem
@{
    ViewData["Title"] = "Xóa Địa Điểm";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Xác Nhận Xóa</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        Bạn có chắc muốn xóa địa điểm <strong>@Model.TenDiaDiem</strong>?
                        @if (Model.SuKiens != null && Model.SuKiens.Any())
                        {
                            <br><span class="text-danger">⚠️ Có @Model.SuKiens.Count sự kiện đang dùng địa điểm này!</span>
                        }
                    </div>
                    <dl class="row">
                        <dt class="col-4">Tên:</dt>
                        <dd class="col-8">@Model.TenDiaDiem</dd>
                        <dt class="col-4">Địa Chỉ:</dt>
                        <dd class="col-8">@Model.DiaChi</dd>
                        <dt class="col-4">Sức Chứa:</dt>
                        <dd class="col-8">@Model.SucChua người</dd>
                    </dl>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2 justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
                            <button type="submit" class="btn btn-danger">Xác Nhận Xóa</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
