@model QuanLySuKien.Models.DiaDiem

@{
    ViewData["Title"] = Model.TenDiaDiem;
}

<div class="venue-detail-page">
    <div class="container">
        <!-- Venue Hero -->
        <div class="venue-hero">
            <i class="bi bi-building venue-hero-icon"></i>
            <div class="venue-hero-content">
                <h1 class="venue-name">@Model.TenDiaDiem</h1>
                <p class="venue-address-hero">
                    <i class="bi bi-geo-alt"></i>
                    @Model.DiaChi
                </p>
                <p class="venue-capacity">
                    <i class="bi bi-people"></i>
                    Sức chứa: @Model.SucChua.ToString("N0") người
                </p>
            </div>
        </div>

        <!-- Venue Info -->
        @if (!string.IsNullOrEmpty(Model.MoTa))
        {
            <div class="venue-info-section">
                <h2>Về Địa Điểm</h2>
                <p>@Model.MoTa</p>
            </div>
        }

        <!-- Venue Events -->
        <div class="venue-events-section">
            <h2>Sự Kiện Tại Địa Điểm Này</h2>
            @if (Model.SuKiens != null && Model.SuKiens.Any())
            {
                <div class="venue-events-grid">
                    @foreach (var suKien in Model.SuKiens.OrderBy(s => s.NgayToChuc))
                    {
                        <div class="event-card">
                            <a asp-controller="SuKiens" asp-action="Details" asp-route-id="@suKien.Id" class="event-card-overlay"></a>
                            <div class="event-card-image">
                                @if (!string.IsNullOrEmpty(suKien.AnhBia))
                                {
                                    <img src="@suKien.AnhBia" alt="@suKien.TenSuKien">
                                }
                                else
                                {
                                    <div class="event-placeholder-image">
                                        <i class="bi bi-calendar-event"></i>
                                    </div>
                                }
                                <div class="event-date-badge">
                                    <div class="date-month">@suKien.NgayToChuc.ToString("MMM").ToUpper()</div>
                                    <div class="date-day">@suKien.NgayToChuc.Day</div>
                                </div>
                                @if (!string.IsNullOrEmpty(suKien.LoaiSuKien))
                                {
                                    <div class="event-category-badge">@suKien.LoaiSuKien</div>
                                }
                            </div>
                            <div class="event-card-content">
                                <h3 class="event-card-title">
                                    <a asp-controller="SuKiens" asp-action="Details" asp-route-id="@suKien.Id">@suKien.TenSuKien</a>
                                </h3>
                                <div class="event-card-time">
                                    <i class="bi bi-clock"></i>
                                    <span>@suKien.GioToChuc.ToString("HH:mm")</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted text-center">Hiện chưa có sự kiện nào tại địa điểm này.</p>
            }
        </div>
    </div>
</div>
