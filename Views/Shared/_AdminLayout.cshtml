<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            font-family: 'Inter', 'Segoe UI', system-ui, -apple-system, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            background-attachment: fixed;
        }

        /* Sidebar */
        .admin-sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 280px;
            background: linear-gradient(180deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
            color: white;
            overflow-y: auto;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            z-index: 1000;
            box-shadow: 4px 0 24px rgba(0,0,0,0.3);
            border-right: 1px solid rgba(255,255,255,0.1);
        }

        .admin-sidebar .brand {
            padding: 24px 20px;
            font-size: 1.4rem;
            font-weight: 700;
            text-align: center;
            border-bottom: 1px solid rgba(255,255,255,0.1);
            color: white;
            text-decoration: none;
            display: block;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            transition: all 0.3s;
        }

        .admin-sidebar .brand:hover {
            background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
            transform: scale(1.02);
        }

        .admin-sidebar .brand i {
            background: linear-gradient(135deg, #fbbf24, #f59e0b);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .sidebar-menu {
            padding: 20px 0;
        }

        .menu-section-title {
            padding: 10px 20px;
            font-size: 0.75rem;
            font-weight: 600;
            color: rgba(255,255,255,0.5);
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .menu-item {
            padding: 14px 20px;
            margin: 4px 12px;
            color: rgba(255,255,255,0.8);
            text-decoration: none;
            display: flex;
            align-items: center;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            border-radius: 12px;
            position: relative;
            overflow: hidden;
        }

        .menu-item::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            height: 100%;
            width: 4px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            transform: scaleY(0);
            transition: transform 0.3s;
        }

        .menu-item:hover {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.2), rgba(118, 75, 162, 0.2));
            color: white;
            transform: translateX(4px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
        }

        .menu-item:hover::before {
            transform: scaleY(1);
        }

        .menu-item.active {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.3), rgba(118, 75, 162, 0.3));
            color: white;
            box-shadow: 0 4px 16px rgba(102, 126, 234, 0.4);
        }

        .menu-item.active::before {
            transform: scaleY(1);
        }

        .menu-item i {
            width: 24px;
            margin-right: 10px;
            font-size: 1.1rem;
        }

        /* Main Content */
        .admin-main {
            margin-left: 280px;
            min-height: 100vh;
            transition: all 0.3s;
        }

        /* Top Header */
        .admin-header {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            padding: 20px 35px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: sticky;
            top: 0;
            z-index: 999;
            border-bottom: 1px solid rgba(255,255,255,0.3);
        }

        .admin-header .page-title {
            font-size: 1.6rem;
            font-weight: 700;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin: 0;
        }

        .admin-user-info {
            display: flex;
            align-items: center;
            gap: 16px;
            background: rgba(255,255,255,0.5);
            padding: 8px 16px;
            border-radius: 50px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }

        .admin-user-info .user-avatar {
            width: 44px;
            height: 44px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            font-size: 1.1rem;
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }

        .admin-user-info .user-details {
            line-height: 1.2;
        }

        .admin-user-info .user-name {
            font-weight: 600;
            color: #1e3a8a;
            font-size: 0.9rem;
        }

        .admin-user-info .user-role {
            font-size: 0.7rem;
            background: linear-gradient(135deg, #dc2626, #ef4444);
            color: white;
            padding: 2px 8px;
            border-radius: 10px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .btn-logout {
            padding: 10px 20px;
            border-radius: 12px;
            border: none;
            background: linear-gradient(135deg, #dc2626, #ef4444);
            color: white;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            text-decoration: none;
            font-size: 0.9rem;
            font-weight: 600;
            box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3);
        }

        .btn-logout:hover {
            background: linear-gradient(135deg, #b91c1c, #dc2626);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(220, 38, 38, 0.4);
            color: white;
        }

        /* Content Area */
        .admin-content {
            padding: 35px;
            background: rgba(255,255,255,0.05);
        }

        .admin-content .card {
            border-radius: 16px;
            border: 1px solid rgba(255,255,255,0.2);
            background: rgba(255,255,255,0.95);
            backdrop-filter: blur(10px);
            box-shadow: 0 8px 32px rgba(0,0,0,0.1);
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .admin-sidebar {
                transform: translateX(-260px);
            }

            .admin-sidebar.show {
                transform: translateX(0);
            }

            .admin-main {
                margin-left: 0;
            }

            .mobile-toggle {
                display: block !important;
            }
        }

        .mobile-toggle {
            display: none;
            background: #1e3a8a;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 6px;
            cursor: pointer;
        }

        /* Custom Scrollbar */
        .admin-sidebar::-webkit-scrollbar {
            width: 6px;
        }

        .admin-sidebar::-webkit-scrollbar-track {
            background: rgba(255,255,255,0.05);
        }

        .admin-sidebar::-webkit-scrollbar-thumb {
            background: rgba(255,255,255,0.2);
            border-radius: 3px;
        }

        .admin-sidebar::-webkit-scrollbar-thumb:hover {
            background: rgba(255,255,255,0.3);
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="admin-sidebar" id="adminSidebar">
        <a href="@Url.Action("Index", "Admin")" class="brand">
            <i class="bi bi-grid-fill"></i> EventHub Admin
        </a>

        <div class="sidebar-menu">
            <div class="menu-section-title">Dashboard</div>
            <a href="@Url.Action("Index", "Admin")" class="menu-item @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" ? "active" : "")">
                <i class="bi bi-speedometer2"></i>
                <span>Tổng Quan</span>
            </a>

            <div class="menu-section-title">Quản Lý</div>
            <a href="@Url.Action("Users", "Admin")" class="menu-item @(ViewContext.RouteData.Values["action"]?.ToString() == "Users" ? "active" : "")">
                <i class="bi bi-people"></i>
                <span>Người Dùng</span>
            </a>
            <a href="@Url.Action("Index", "SuKiens")" class="menu-item">
                <i class="bi bi-calendar-event"></i>
                <span>Sự Kiện</span>
            </a>
            <a href="@Url.Action("Index", "DonHangs")" class="menu-item">
                <i class="bi bi-receipt"></i>
                <span>Đơn Hàng</span>
            </a>
            <a href="@Url.Action("Index", "NgheSis")" class="menu-item">
                <i class="bi bi-star"></i>
                <span>Nghệ Sĩ</span>
            </a>
            <a href="@Url.Action("Index", "DiaDiems")" class="menu-item">
                <i class="bi bi-geo-alt"></i>
                <span>Địa Điểm</span>
            </a>

            <div class="menu-section-title">Website</div>
            <a href="@Url.Action("Index", "Home")" class="menu-item" target="_blank">
                <i class="bi bi-box-arrow-up-right"></i>
                <span>Xem Website</span>
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="admin-main">
        <!-- Top Header -->
        <div class="admin-header">
            <div class="d-flex align-items-center gap-3">
                <button class="mobile-toggle" onclick="toggleSidebar()">
                    <i class="bi bi-list"></i>
                </button>
                <h1 class="page-title mb-0">@ViewData["Title"]</h1>
            </div>

            <div class="admin-user-info">
                <div class="user-avatar">
                    @(User.Identity?.Name?.Substring(0, 1).ToUpper() ?? "A")
                </div>
                <div class="user-details">
                    <div class="user-name">@User.Identity?.Name</div>
                    <div class="user-role">Administrator</div>
                </div>
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")" method="post" class="d-inline">
                    <button type="submit" class="btn-logout">
                        <i class="bi bi-box-arrow-right"></i> Đăng Xuất
                    </button>
                </form>
            </div>
        </div>

        <!-- Page Content -->
        <div class="admin-content">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function toggleSidebar() {
            document.getElementById('adminSidebar').classList.toggle('show');
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
