@model QuanLySuKien.Models.SuKien

@{
    ViewData["Title"] = "Xóa Sự Kiện";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Xác Nhận Xóa Sự Kiện</h5>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>Cảnh báo:</strong> Bạn có chắc muốn xóa sự kiện này? Hành động này không thể hoàn tác!
                    </div>

                    <div class="row">
                        <div class="col-md-8">
                            <h4 class="mb-3">@Model.TenSuKien</h4>

                            <dl class="row">
                                <dt class="col-sm-4"><i class="bi bi-tag"></i> Loại Sự Kiện:</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.LoaiSuKien))
                                    {
                                        <span class="badge bg-info">@Model.LoaiSuKien</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa xác định</span>
                                    }
                                </dd>

                                <dt class="col-sm-4"><i class="bi bi-geo-alt"></i> Địa Điểm:</dt>
                                <dd class="col-sm-8">@Model.DiaDiem.TenDiaDiem</dd>

                                <dt class="col-sm-4"><i class="bi bi-calendar3"></i> Ngày Tổ Chức:</dt>
                                <dd class="col-sm-8">@Model.NgayToChuc.ToString("dd/MM/yyyy")</dd>

                                <dt class="col-sm-4"><i class="bi bi-clock"></i> Giờ Tổ Chức:</dt>
                                <dd class="col-sm-8">@Model.GioToChuc.ToString("HH:mm")</dd>

                                <dt class="col-sm-4"><i class="bi bi-info-circle"></i> Trạng Thái:</dt>
                                <dd class="col-sm-8">
                                    @switch(Model.TrangThai)
                                    {
                                        case "SapDienRa":
                                            <span class="badge bg-primary">Sắp Diễn Ra</span>
                                            break;
                                        case "DangDienRa":
                                            <span class="badge bg-success">Đang Diễn Ra</span>
                                            break;
                                        case "DaKetThuc":
                                            <span class="badge bg-secondary">Đã Kết Thúc</span>
                                            break;
                                        case "DaHuy":
                                            <span class="badge bg-danger">Đã Hủy</span>
                                            break;
                                    }
                                </dd>

                                @if (!string.IsNullOrEmpty(Model.MoTa))
                                {
                                    <dt class="col-sm-4"><i class="bi bi-card-text"></i> Mô Tả:</dt>
                                    <dd class="col-sm-8">@Model.MoTa</dd>
                                }

                                @if (Model.LoaiVes != null && Model.LoaiVes.Any())
                                {
                                    <dt class="col-sm-4"><i class="bi bi-ticket"></i> Loại Vé:</dt>
                                    <dd class="col-sm-8">
                                        <span class="badge bg-warning text-dark">@Model.LoaiVes.Count loại vé</span>
                                    </dd>
                                }
                            </dl>
                        </div>

                        <div class="col-md-4 text-center">
                            @if (!string.IsNullOrEmpty(Model.AnhBia))
                            {
                                <label class="form-label fw-bold">Ảnh Bìa:</label>
                                <img src="@Model.AnhBia" class="img-thumbnail" style="max-height: 250px; border-radius: 12px;" alt="@Model.TenSuKien" />
                            }
                            else
                            {
                                <div class="p-5 bg-light rounded">
                                    <i class="bi bi-image" style="font-size: 3rem; color: #ccc;"></i>
                                    <p class="text-muted mt-2">Chưa có ảnh</p>
                                </div>
                            }
                        </div>
                    </div>

                    <hr>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2 justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-arrow-left"></i> Quay Lại
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash"></i> Xác Nhận Xóa
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
