@model IEnumerable<QuanLySuKien.Models.LoaiVe>

@{
    ViewData["Title"] = "Quản Lý Loại Vé";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-ticket-perforated"></i> Quản Lý Loại Vé</h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Thêm Loại Vé Mới
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Sự Kiện</th>
                        <th>Tên Loại Vé</th>
                        <th>Giá Vé</th>
                        <th>Tổng Số Lượng</th>
                        <th>Số Lượng Còn Lại</th>
                        <th>Đã Bán</th>
                        <th style="width: 180px;">Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.SuKien.TenSuKien</strong></td>
                            <td>@item.TenLoai</td>
                            <td class="text-danger fw-bold">@item.GiaVe.ToString("N0") đ</td>
                            <td>@item.TongSoLuong</td>
                            <td>
                                @if (item.SoLuongConLai == 0)
                                {
                                    <span class="badge bg-danger">Hết vé</span>
                                }
                                else if (item.SoLuongConLai < item.TongSoLuong * 0.2)
                                {
                                    <span class="badge bg-warning text-dark">@item.SoLuongConLai</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">@item.SoLuongConLai</span>
                                }
                            </td>
                            <td>@(item.TongSoLuong - item.SoLuongConLai)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i> Sửa
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
