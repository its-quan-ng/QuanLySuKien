@page
@model QuanLySuKien.Areas.Identity.Pages.Account.ForgotPasswordModel

@{
    ViewData["Title"] = "Quên Mật Khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
</head>
<body class="auth-page">
    <div class="auth-container">
        <!-- Left Side - Branding -->
        <div class="auth-left">
            <div class="auth-branding">
                <a href="/" class="brand-logo">
                    <span class="brand-text">EventHub</span>
                </a>
                <h1>Khôi Phục Tài Khoản</h1>
                <p>Nhập email của bạn và chúng tôi sẽ gửi hướng dẫn đặt lại mật khẩu</p>
                <div class="auth-illustration">
                    <i class="bi bi-shield-lock"></i>
                </div>
            </div>
        </div>

        <!-- Right Side - Form -->
        <div class="auth-right">
            <div class="auth-form-container">
                <h2>Quên Mật Khẩu?</h2>
                <p class="text-muted mb-4">Đừng lo! Nhập email của bạn để nhận liên kết đặt lại mật khẩu.</p>

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    @if (Model.EmailSent)
                    {
                        <div class="alert alert-success">
                            <i class="bi bi-check-circle"></i>
                            Email khôi phục đã được gửi! Vui lòng kiểm tra hộp thư của bạn.
                        </div>
                    }

                    <div class="form-group">
                        <label asp-for="Input.Email">Email</label>
                        <input asp-for="Input.Email" class="form-control" placeholder="example@email.com" autocomplete="username" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-auth-primary">
                        <i class="bi bi-send"></i> Gửi Liên Kết Khôi Phục
                    </button>

                    <div class="auth-divider">
                        <span>Hoặc</span>
                    </div>

                    <a asp-page="./Login" class="btn btn-auth-secondary">
                        <i class="bi bi-arrow-left"></i> Quay Lại Đăng Nhập
                    </a>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
