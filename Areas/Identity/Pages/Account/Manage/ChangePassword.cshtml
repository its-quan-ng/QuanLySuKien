@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Đổi Mật Khẩu";
    ViewData["ActivePage"] = "ChangePassword";
}

<div class="manage-container">
    <!-- Sidebar Navigation -->
    <div class="manage-sidebar">
        <div class="manage-sidebar-header">
            <a href="/" class="brand-link">
                <i class="bi bi-arrow-left"></i>
                <span>@User.Identity.Name</span>
            </a>
        </div>

        <nav class="manage-nav">
            <a href="/Identity/Account/Manage" class="manage-nav-item">
                <i class="bi bi-person"></i>
                <span>Hồ Sơ</span>
            </a>
            <a href="/Identity/Account/Manage/Email" class="manage-nav-item">
                <i class="bi bi-envelope"></i>
                <span>Email</span>
            </a>
            <a href="/Identity/Account/Manage/ChangePassword" class="manage-nav-item active">
                <i class="bi bi-key"></i>
                <span>Mật Khẩu</span>
            </a>
            <a href="/Identity/Account/Manage/TwoFactorAuthentication" class="manage-nav-item">
                <i class="bi bi-shield-check"></i>
                <span>Xác Thực Hai Yếu Tố</span>
            </a>
            <a href="/Identity/Account/Manage/PersonalData" class="manage-nav-item">
                <i class="bi bi-file-person"></i>
                <span>Dữ Liệu Cá Nhân</span>
            </a>
        </nav>

        <div class="manage-sidebar-footer">
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post" class="logout-form">
                <button type="submit" class="btn-logout">
                    <i class="bi bi-box-arrow-right"></i>
                    <span>Đăng Xuất</span>
                </button>
            </form>
        </div>
    </div>

    <!-- Main Content -->
    <div class="manage-content">
        <div class="manage-header">
            <div>
                <h1>Đổi Mật Khẩu</h1>
                <p class="manage-subtitle">Cập nhật mật khẩu để bảo mật tài khoản</p>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.StatusMessage))
        {
            <div class="alert alert-success" role="alert">
                <i class="bi bi-check-circle"></i>
                @Model.StatusMessage
            </div>
        }

        <div class="manage-card">
            <div class="manage-card-header">
                <h2>Thay Đổi Mật Khẩu</h2>
                <p>Đảm bảo mật khẩu mới mạnh và dễ nhớ</p>
            </div>

            <form id="change-password-form" method="post" class="manage-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Input.OldPassword">Mật khẩu hiện tại</label>
                        <div class="input-with-icon">
                            <i class="bi bi-lock"></i>
                            <input asp-for="Input.OldPassword" class="form-control" placeholder="Nhập mật khẩu hiện tại" />
                        </div>
                        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Input.NewPassword">Mật khẩu mới</label>
                        <div class="input-with-icon">
                            <i class="bi bi-key"></i>
                            <input asp-for="Input.NewPassword" class="form-control" placeholder="Nhập mật khẩu mới" />
                        </div>
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                        <small class="form-text text-muted">
                            Mật khẩu phải có ít nhất 6 ký tự
                        </small>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword">Xác nhận mật khẩu mới</label>
                        <div class="input-with-icon">
                            <i class="bi bi-check-circle"></i>
                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Nhập lại mật khẩu mới" />
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-save">
                        <i class="bi bi-shield-check"></i>
                        Cập Nhật Mật Khẩu
                    </button>
                </div>
            </form>
        </div>

        <!-- Password Tips Card -->
        <div class="manage-card">
            <div class="manage-card-header">
                <h2>Mẹo Tạo Mật Khẩu Mạnh</h2>
                <p>Làm theo các gợi ý để tạo mật khẩu an toàn</p>
            </div>

            <div class="tips-list">
                <div class="tip-item">
                    <div class="tip-icon">
                        <i class="bi bi-check-circle-fill"></i>
                    </div>
                    <div class="tip-content">
                        <h3>Sử dụng ít nhất 8 ký tự</h3>
                        <p>Mật khẩu dài hơn khó bị phá vỡ hơn</p>
                    </div>
                </div>

                <div class="tip-item">
                    <div class="tip-icon">
                        <i class="bi bi-check-circle-fill"></i>
                    </div>
                    <div class="tip-content">
                        <h3>Kết hợp chữ hoa, chữ thường và số</h3>
                        <p>Tăng độ phức tạp của mật khẩu</p>
                    </div>
                </div>

                <div class="tip-item">
                    <div class="tip-icon">
                        <i class="bi bi-check-circle-fill"></i>
                    </div>
                    <div class="tip-content">
                        <h3>Thêm ký tự đặc biệt</h3>
                        <p>Ví dụ: !@#$%^&* giúp mật khẩu mạnh hơn</p>
                    </div>
                </div>

                <div class="tip-item">
                    <div class="tip-icon">
                        <i class="bi bi-x-circle-fill text-danger"></i>
                    </div>
                    <div class="tip-content">
                        <h3>Tránh sử dụng thông tin cá nhân</h3>
                        <p>Không dùng tên, ngày sinh, số điện thoại</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
