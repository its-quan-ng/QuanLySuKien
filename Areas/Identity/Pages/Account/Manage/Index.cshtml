@page
@model IndexModel
@{
    ViewData["Title"] = "Hồ Sơ";
    ViewData["ActivePage"] = "Profile";
}

<div class="manage-container">
    <!-- Sidebar Navigation -->
    <div class="manage-sidebar">
        <div class="manage-sidebar-header">
            <a href="/" class="brand-link">
                <i class="bi bi-arrow-left"></i>
                <span>@User.Identity.Name</span>
            </a>
        </div>

        <nav class="manage-nav">
            <a href="/Identity/Account/Manage" class="manage-nav-item active">
                <i class="bi bi-person"></i>
                <span>Hồ Sơ</span>
            </a>
            <a href="/Identity/Account/Manage/Email" class="manage-nav-item">
                <i class="bi bi-envelope"></i>
                <span>Email</span>
            </a>
            <a href="/Identity/Account/Manage/ChangePassword" class="manage-nav-item">
                <i class="bi bi-key"></i>
                <span>Mật Khẩu</span>
            </a>
            <a href="/Identity/Account/Manage/TwoFactorAuthentication" class="manage-nav-item">
                <i class="bi bi-shield-check"></i>
                <span>Xác Thực Hai Yếu Tố</span>
            </a>
            <a href="/Identity/Account/Manage/PersonalData" class="manage-nav-item">
                <i class="bi bi-file-person"></i>
                <span>Dữ Liệu Cá Nhân</span>
            </a>
        </nav>

        <div class="manage-sidebar-footer">
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post" class="logout-form">
                <button type="submit" class="btn-logout">
                    <i class="bi bi-box-arrow-right"></i>
                    <span>Đăng Xuất</span>
                </button>
            </form>
        </div>
    </div>

    <!-- Main Content -->
    <div class="manage-content">
        <div class="manage-header">
            <div>
                <h1>Hồ Sơ</h1>
                <p class="manage-subtitle">Quản lý thông tin tài khoản của bạn</p>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.StatusMessage))
        {
            <div class="alert alert-success" role="alert">
                <i class="bi bi-check-circle"></i>
                @Model.StatusMessage
            </div>
        }

        <div class="manage-card">
            <div class="manage-card-header">
                <h2>Thông Tin Cá Nhân</h2>
                <p>Cập nhật thông tin của bạn</p>
            </div>

            <form id="profile-form" method="post" class="manage-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Username">Tên đăng nhập</label>
                        <input asp-for="Username" class="form-control" disabled />
                        <small class="form-text text-muted">
                            Tên đăng nhập không thể thay đổi
                        </small>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Input.PhoneNumber">Số điện thoại</label>
                        <div class="input-with-icon">
                            <i class="bi bi-telephone"></i>
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Nhập số điện thoại" />
                        </div>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-save">
                        <i class="bi bi-check-circle"></i>
                        Lưu Thay Đổi
                    </button>
                </div>
            </form>
        </div>

        <!-- Additional Info Card -->
        <div class="manage-card">
            <div class="manage-card-header">
                <h2>Bảo Mật Tài Khoản</h2>
                <p>Quản lý cài đặt bảo mật</p>
            </div>

            <div class="security-links">
                <a href="/Identity/Account/Manage/ChangePassword" class="security-link-item">
                    <div class="security-link-icon">
                        <i class="bi bi-key"></i>
                    </div>
                    <div class="security-link-content">
                        <h3>Đổi Mật Khẩu</h3>
                        <p>Cập nhật mật khẩu của bạn để bảo vệ tài khoản</p>
                    </div>
                    <i class="bi bi-chevron-right"></i>
                </a>

                <a href="/Identity/Account/Manage/TwoFactorAuthentication" class="security-link-item">
                    <div class="security-link-icon">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <div class="security-link-content">
                        <h3>Xác Thực Hai Yếu Tố</h3>
                        <p>Tăng cường bảo mật với xác thực hai yếu tố</p>
                    </div>
                    <i class="bi bi-chevron-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
